<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main">

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#100F0E"
        tools:context=".MainActivity">


        <RelativeLayout
            android:id="@+id/svetlo"
            android:layout_width="260dp"
            android:layout_height="80dp"
            android:layout_marginTop="28dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.503"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/krevet"
            android:background="@drawable/border_pocetna"
            android:padding="15dp"
            android:longClickable="true"
            >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/svetlo"
                />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/radniSto"
            android:layout_width="110dp"
            android:layout_height="110dp"

            android:layout_marginTop="160dp"
            android:layout_marginRight="40dp"
            android:padding="15dp"
            app:layout_constraintEnd_toStartOf="@+id/krevet"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/border_pocetna"
            android:longClickable="true"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/radni_sto"
                />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/krevet"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:padding="15dp"
            android:layout_marginTop="160dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/radniSto"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/border_pocetna"
            android:longClickable="true"
            >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/krevet"
                />
        </RelativeLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>